<h3 class="display-6"><%= link_to article.title, article_path(article) %></h3>
<p class="lead"><%= article.body %></p>
<p>Created on: <%= article.created_at.strftime("%d.%m.%Y") %></p>
<hr class="my-4">

<p>Comments</p>
  <% article.comments.each do |comment| %>
    <p>
      <%= comment.body %> - <%= comment.user&.email %> - <%= comment.created_at.strftime("%d.%m.%Y") %>
    </p>
  <% end %>

  <%= render 'comments/form', comment: article.comments.new %>
<hr class="my-4">
